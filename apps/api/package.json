{
    "name": "api",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "npx prisma generate --schema=../../prisma/schema.prisma && tsc",
        "start": "node dist/apps/api/src/server.js",
        "start:prod": "npx prisma db push --accept-data-loss --schema=../../prisma/schema.prisma && node dist/apps/api/src/server.js",
        "lint": "eslint .",
        "test": "jest"
    },
    "dependencies": {
        "@prisma/client": "^5.0.0",
        "@veil/crypto": "workspace:*",
        "@veil/types": "workspace:*",
        "@veil/zcash": "workspace:*",
        "bcrypt": "^6.0.0",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^4.18.0",
        "express-rate-limit": "^8.2.1",
        "helmet": "^7.0.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "pino": "^10.1.0",
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/cors": "^2.8.0",
        "@types/express": "^4.17.0",
        "@types/jest": "^29.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/morgan": "^1.9.0",
        "@types/node": "^20.0.0",
        "@types/supertest": "^6.0.3",
        "@veil/config": "workspace:*",
        "jest": "^29.0.0",
        "jest-mock-extended": "^4.0.0",
        "pino-pretty": "^13.1.3",
        "prisma": "^5.0.0",
        "supertest": "^7.1.4",
        "ts-jest": "^29.0.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.0.0"
    }
}